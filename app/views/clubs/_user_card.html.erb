<div class="user-card-content">
  <div class="user-card-picture" style="background-image: url(<%= helper_user_picture(user) %>")>

  </div>
  <div class="user-card-name">
    <%= user.firstname %> <%= user.lastname.upcase %>
  </div>
  <div class="user-card-profil">
    <%= user.profil %>
  </div>
  <% if !user.strava_profil.nil? %>
    <a href= <%= user.strava_profil %>, target = '_blank' >
      <div class="user-card-strava">
        <i class="fab fa-strava"></i>
      </div>
    </a>
  <% end %>
  <% if user.coach %>
    <div class="user-card-sport-icon-content">
      <% if user.skill_swim %>
        <div class="user-card-sport-icon">
          <i class="fas fa-swimmer fa-lg"></i>
        </div>
      <% end %>
      <% if user.skill_bike %>
        <div class="user-card-sport-icon">
          <i class="fas fa-biking fa-lg"></i>
        </div>
      <% end %>
      <% if user.skill_run %>
        <div class="user-card-sport-icon">
          <i class="fas fa-running fa-lg"></i>
        </div>
      <% end %>
    </div>
  <% end %>

</div>
