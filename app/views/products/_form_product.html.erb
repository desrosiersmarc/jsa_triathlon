<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <div class="article-form-photo">
    <% if @product.photo? %>
      <%= cl_image_tag(@product.photo, width: 400) %>
    <% end %>
  </div>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :stock %>
  <%= f.input :size, collection: @sizes %>
  <%= f.input :sex, collection: @sex %>
  <%= f.input :sport_type, collection: @sport_types %>
  <% if current_user.role == 'admin' %>
    <%= f.input :product_type, collection: @product_types%>
  <% else %>
    <%= f.input :product_type, input_html: {value: 2}, as: :hidden%>
  <% end %>
  <%= f.input :active %>
  <%= f.submit 'Enregistrer', class: 'btn btn-danger btn-block' %>
<% end %>
