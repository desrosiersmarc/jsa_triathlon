<div class="container">
  <div class="row">
    <h3>Tenues</h3>
    <% @sportswears.each do |sportswear| %>
      <div class="col-xs-12 col-sm-6">
        <%= render 'card_product', product: sportswear %>
      </div>
    <% end %>
    <% if admin? %>
      <%= link_to new_product_path do %>
        <div class="plus-button">
          <i class="far fa-edit"></i>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
