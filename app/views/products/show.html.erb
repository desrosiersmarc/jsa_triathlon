<div class="product-show-content">
  <div class="return-link">
    <% if @product.product_type_id == 2 %>
      <%= link_to petites_annonces_path do %>
        <i class="fas fa-long-arrow-alt-left"></i> retour vers les annonces
      <% end %>
    <% else %>
    <%= link_to sportswears_path do %>
        <i class="fas fa-long-arrow-alt-left"></i> retour vers les tenues
      <% end %>

    <% end %>
  </div>
  <div class="product-show-triangle"></div>
  <div class="product-show-title">
    <%= @product.name.upcase %>
  </div>
  <div class="product-show-sporttype">
    <%= @product.sport_type.name %>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <%= link_to product_path(@product) do %>
          <div class="card-product-photo" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url('<%= helper_image_path(@product) %>') " >
            <% if !@product.active %>
              <div class="picture-card-status">
                <i class="fas fa-exclamation-triangle"></i>
                non publiÃ©
                <i class="fas fa-exclamation-triangle"></i>
              </div>
            <% end %>
            <div class="product-show-user">
              <%= render 'shared/user_picture', user: @product.user %>
            </div>
            <% if @product.sold %>
              <div class="product-show-sold">
               ðŸ˜ƒðŸŽ‰ VENDU ðŸŽ‰ðŸ˜ƒ
              </div>
            <% end %>
            <% if member? %>
              <%= link_to edit_product_path(@product) do %>
                <div class="article-edit-link ">
                  <i class="far fa-edit"></i>
                </div>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-6">
        <div class="product-show-information-content">
          <div class="product-show-information">
            <div class="product-show-price">
              <%= @product.price %>â‚¬
            </div>
            <% if @product.product_type_id == 1 %>
              <div class="product-show-stock">
                Stock : <%= @product.stock %>
              </div>
            <% else %>
              <div class="product-show-size">
                Taille : <%= @product.size.name %>
              </div>
            <% end %>
            <div>
              <%= @product.sex %>
            </div>
          </div>
          <div class="product-show-description">
            <%= @product.description %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% if @product.product_type.id == 2 %>
  <div class="product-show-seller">
      <div class="product-show-seller-information">
        <div>
          Contactez
          <%= @product.user.firstname %>
          <%= @product.user.lastname %>
          <i class="fas fa-long-arrow-alt-right"></i>
        </div>

        <div>
          <i class="fas fa-mobile-alt"></i>
          <a href="tel: <%= @product.user.mobil_phone %>", class="phone-link">
            <%= @product.user.mobil_phone %>
          </a>
        </div>
        <div>
          <i class="far fa-envelope"></i>
          <a href="mailto:<%= @product.user.email %>">
            <%= @product.user.email %>
          </a>
        </div>
      </div>
  </div>
<% end %>







