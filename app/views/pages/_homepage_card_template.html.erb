<div class="picture-card-homepage">
  <a href="<%= article.link %>" target="_blank">
    <div class="picture-card">
      <%= link_to article_path(article) do %>
        <div class="picture-card-photo picture picture-card-photo-homepage" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= helper_image_path(article) %>');">
          <div class="picture-card-title">
            <%= article.name %>
          </div>
          <% if !article.active %>
            <div class="picture-card-status">
              <i class="fas fa-exclamation-triangle"></i>
              non publi√©
              <i class="fas fa-exclamation-triangle"></i>
            </div>
          <% end %>
          <% if article.authors.first.user.photo? %>
            <div class="picture-card-name-photo">
              <%= render 'shared/user_picture', user: article.authors.first.user %>
            </div>
          <% else %>
            <div class="picture-card-name">
              <%= article.authors.first.user.firstname %>
            </div>
          <% end %>


          <div class="picture-card-date">
            <%= article.date.strftime('%d/%m/%Y') %>
          </div>
        </div>
      <% end %>
      <div class="picture-card-container">
        <div class="picture-card-like">
          <i class="fas fa-map-marker-alt"></i>
          <%= article.location %>
        </div>
        <div class="picture-card-review">
          <i class="fas fa-heart"></i>
          <%= article.total_likes %>
        </div>
        <div class="picture-card-review">
          <i class="fas fa-comments"></i>
          <%= article.count_reviews %>
        </div>
      </div>
    </div>
  </a>
  <% if admin? %>
    <%= link_to edit_article_path(article) do %>
      <div class="article-edit-link ">
        <i class="far fa-edit"></i>
      </div>
    <% end %>
  <% end %>
</div>

