<%= render 'homepage_carousel' %>


<div class="wrapper">
  <div class="wrapper-title">
    Le club
  </div>
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <%= render 'wrapper_cards', {articles: @clubs} %>
      </div>
    </div>
  </div>
  <%= link_to clubs_path, class: "wrapper-link wrapper-link-black" do %>
    Découvrir le club
  <% end %>
</div>
<div class="wrapper wrapper-black">
  <div class="wrapper-title">
    Evénement du club
  </div>
  <div class="container">
    <div class="row">
      <div class="picture-card-homepage">
        <%= render 'wrapper_cards', {articles: @club_events_top3} %>
      </div>
    </div>
  </div>
  <%= link_to club_events_path, class: "wrapper-link wrapper-link-white" do  %>
    Voir tous les événements
  <% end %>
</div>
<div class="wrapper">
  <div class="wrapper-title">
    Entrainements
  </div>
  <div class="container">
    <div class="row">
      <%= render 'wrapper_cards', {articles: @trainings_top3} %>
    </div>
  </div>
  <%= link_to calendar_path, class: "wrapper-link wrapper-link-black"  do %>
      Voir le planning
  <% end %>
</div>
<div class="wrapper wrapper-black">
  <div class="wrapper-title">
    La prochaine course
  </div>
  <div class="container">
    <div class="row">
      <%= render 'wrapper_cards', {articles: @contests_top3} %>
    </div>
  </div>
  <%= link_to contests_path, class: "wrapper-link wrapper-link-white"  do %>
      Voir le calendrier
  <% end %>

  <div class="hidden-xs">
    <%= link_to results_path, class: "home-results" do %>
      Voir les résultats
    <% end %>
  </div>
</div>
<div class="col-xs-12 hidden-sm hidden-md hidden-lg">
  <div class="result-on-mobile-wrapper">
    <%= link_to results_path, class: "result-on-mobile-content" do %>
      Résultats
    <% end %>
  </div>
</div>
<div class="wrapper">
  <div class="wrapper-title">
    L'école de triathlon
  </div>
  <div class="container">
    <div class="row">
      <%= render 'wrapper_cards', {articles: @schools_top3} %>
    </div>
  </div>
  <%= link_to school_path, class: "wrapper-link wrapper-link-black"  do %>
    Voir tous les articles
  <% end %>
</div>
<div class="wrapper wrapper-black">
  <div class="wrapper-title">
    Divers
  </div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 ">
      <%= link_to sportswears_path do %>
        <div class="picture-card">
          <div class="home-card home-card-homepage" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(https://res.cloudinary.com/dmbf8fog4/image/upload/v1541711807/JSA%20Triathlon/jsa_dggizl.jpg)">
          </div>
          <div class="home-card-title">
            Tenues
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12">
      <div class="correct-xs">

      </div>
    </div>

  </div>
</div>
</div>
<div class="wrapper">
  <div class="wrapper-title">
    Les photos
  </div>
  <div class="container">
    <div class="row">
      <%= render 'picture_link', {pictures: @pictures} %>
    </div>
  </div>

  <%= link_to pictures_path, class: "wrapper-link wrapper-link-black" do %>
    Voir toutes les photos
  <% end %>
</div>
<% if user_signed_in? %>
  <% if current_user.role == 'admin' %>
    <%= link_to new_article_path do %>
      <div class="plus-button">
        <i class="far fa-edit"></i>
      </div>
    <% end %>
  <% end %>
<% else %>
  <a href="https://espacetri.fftri.com/">
    <div class="licence box-shadow-md">
      <div>Se</div>
      <div>licencier</div>
    </div>
  </a>
<% end %>
<%= render 'homepage_partners' %>
<%= render 'shared/footer'  %>
