<div class="picture-card-homepage">
  <a href="<%= @picture.link %>" target="_blank">
    <div class="picture-card">
      <div class="picture-card-photo picture picture-card-photo-homepage" style="background-image: url('<%= cl_image_path @picture.photo %>');">
        <div class="picture-card-title">
          <%= @picture.title %>
        </div>
        <div class="picture-card-name">
          <%= @picture.user.firstname %>
        </div>
        <div class="picture-card-date">
          <%= @picture.date.strftime('%d/%m/%Y') %>
        </div>
      </div>
      <div class="picture-card-container">
        <div class="picture-card-like">
          <i class="fas fa-heart"></i>
          <%= @picture.like %>
        </div>
        <div class="picture-card-review">
          <i class="far fa-comments"></i>
          #23
        </div>
      </div>
    </div>
  </a>
</div>
