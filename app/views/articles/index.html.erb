<div class="container">
  <div class="row">
    <h3>Liste des articles</h3>
    <% @articles.each do |article| %>
      <%= link_to article_path(article)  do%>
        <div class="col-xs-12">
          <h2><%= article.name %></h2>
          <%= article.date %>
          <%= article.start_time %>
          <%= article.end_time %>
          <%= article.location %>
          <%= article.link %>
          <%= raw article.content %>
          <%= article.user_id %>
          <%= article.article_type_id %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
