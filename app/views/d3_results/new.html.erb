<div class="container">
  <div class="row">
    <h3>Saisir un résultat pour la D3</h3>

    <%= simple_form_for(@d3_result) do |f| %>
      <%= f.error_notification %>
      <%= f.input :d3_contest_id, collection: @d3_contests, label: "Choix de l'épreuve" %>
      <%= f.input :user_id, collection: @d3_competitors, label: 'Participant' %>
      <%= f.input :rank, collection: 1..30, label: 'Classement' %>
      <h4>Saisie des temps</h4>
<!--         <div class='col-xs-12 col-sm-3'>
          <input type="time" step=1 value="00:15:00" min="00:05:00" max="00:30:00" id='swim' >
        </div> -->
        <div class='col-xs-12 col-sm-3'> <%= f.input :swim, input_html:{class: 'd3-time'} %> </div>
        <div class='col-xs-12 col-sm-3'> <%= f.input :t1, input_html:{class: 'd3-time'} %> </div>
        <div class='col-xs-12 col-sm-3'> <%= f.input :bike, input_html:{class: 'd3-time'} %> </div>
        <div class='col-xs-12 col-sm-3'> <%= f.input :t2, input_html:{class: 'd3-time'} %> </div>
        <div class='col-xs-12 col-sm-3'> <%= f.input :run, input_html:{class: 'd3-time'} %> </div>
        <%= f.input :total, input_html:{class: 'd3-time'} %>

      <%= f.submit 'Mettre à jour', class: 'btn btn-block btn-danger' %>

    <% end %>

  </div>
</div>
