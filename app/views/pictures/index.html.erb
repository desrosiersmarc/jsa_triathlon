<div class="container">
<h3>Albums photos</h3>
  <div class="row">
    <% @pictures.each do |picture| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <a href="<%= picture.link %>" target="_blank">
          <div class="home-card">
            <p>
              <%= picture.description %>
            </p>
            <p>
              <%= picture.date %>
            </p>

          </div>
        </a>

      </div>
    <% end %>
  </div>
</div>
