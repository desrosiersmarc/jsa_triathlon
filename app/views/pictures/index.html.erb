<div class="container">
<h3>Albums photos</h3>
  <div class="row">
    <% @pictures.each do |picture| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <a href="<%= picture.link %>" target="_blank">
          <div class="picture-card">
            <div class="picture-card-photo picture" style="background-image: url('<%= cl_image_path picture.photo %>');">
              <div class="picture-card-title">
                <%= picture.title %>
              </div>
              <div class="picture-card-name">
                #Jean-Fran√ßois
              </div>
              <div class="picture-card-date">
                <%= picture.date.strftime('%d/%m/%Y') %>
              </div>
            </div>
            <div class="picture-card-container">
              <div class="picture-card-like">
                <i class="fas fa-heart"></i>
                <%= picture.like %>
              </div>
              <div class="picture-card-review">
                <i class="far fa-comments"></i>
                #23
              </div>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
  <div class="plus-button">
    <%= link_to new_picture_path do %>
      <i class="far fa-edit"></i>
    <% end %>
  </div>
</div>


