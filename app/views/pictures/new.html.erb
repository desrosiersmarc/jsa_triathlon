<div class="container">
  <div class="row">
    <h3>Ajouter un album photo</h3>
    <%= simple_form_for(@picture) do |f| %>
    <%= f.error_notification %>
      <%= f.input :title, label: 'Titre' %>
      <div class="datepicker">
        <%= f.input :date, as: :date, order: [:day, :month, :year], input_html: {class: 'date-time'} %>
      </div>
      <%= f.input :link, label: "Colle ici le lien vers l'album photo" %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "CrÃ©er l'album", class: 'btn btn-danger btn-block' %>
    <% end %>
  </div>
</div>

