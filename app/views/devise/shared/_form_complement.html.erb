<div class="row">
  <div class="hidden-xs col-sm-6">
    <div class="user-page-icon">
      <i class="fas fa-portrait"></i>
    </div>
  </div>
  <div class="col-xs-12 col-sm-6">
    <% if !current_user.nil? %>
      <div class="user-card-picture" style="background-image: url(<%= helper_user_picture(current_user) %>)">
      </div>
    <% end %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-xs-12 col-sm-6">
    <div class="">
      <%= f.input :firstname, label: t(".firstname")%>
      <%= f.input :lastname, label: t(".lastname")%>
      <!-- sTODO -->
      <%= f.input :mobil_phone, label: t(".mobil_phone")%>
      <%= f.input :birthday, as: :date, label: t(".birthday"), order: [:day, :month, :year], input_html:{class: 'date-time'}%>
    </div>
  </div>
  <div class="hidden-xs col-sm-6">
    <div class="user-page-icon">
      <i class="fas fa-tasks"></i>
    </div>
  </div>
</div>
<hr>
<div class="row">
  <div class="hidden-xs col-sm-6">
    <div class="user-page-icon">
      <i class="fab fa-strava"></i>
    </div>
  </div>
  <div class="col-xs-12 col-sm-6">
    <%= f.input :strava_profil, label: t(".strava_profil") %>
    <%= f.input :display_profil, as: :boolean, label: "Apparaitre sur le trombinoscope du club ?" %>
    <%= f.input :notification, as: :boolean, label: "Recevoir les mails ?" %>
  </div>
</div>
<hr>
